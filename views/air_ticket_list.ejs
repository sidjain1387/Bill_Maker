<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrePreBill</title>
 

</head>
<body>
  <%-include("partials/header.ejs")%>
  <div class="container">
      <br>
      <br>
      <h3>Air Tickets List</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Air Ticket Id</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Flight Number</th>
                        <th scope="col">Flight Date</th>
                        <th scope="col">Flight Time</th>
                        <th scope="col">Flight PNR</th>
                        <th scope="col">Flight Travel Location</th>
                        <th scope="col">Flight Quantity</th>
                        <th scope="col">Flight Rate</th>
                        <th scope="col">Flight SAC Code</th>
                        <th scope="col">Biller Name</th>
                        <th scope="col">Total Cost</th>
                    </tr>
                </thead>
                <tbody>
                    <%let total_airtickets=0;%>
                    <%let total_cost=0;%>
                    <% air_ticket.forEach(function(ticket) { %>
                        <%customers.forEach(function(customer){%>
                            <%if(customer.customer_id==ticket.air_ticket_biller_id){%>
                                <tr>
                                    
                                    <td><%=ticket.air_ticket_id%></td>
                                    <td><%=ticket.air_ticket_customer_name%></td>
                                    <td><%=ticket.flight_number%></td>
                                    <td><%=ticket.flight_date%></td>
                                    <td><%=ticket.flight_time%></td>
                                    <td><%=ticket.flight_pnr%></td>
                                    <td><%=ticket.flight_travel_location%></td>
                                    <td><%=ticket.flight_quantity%></td>
                                    <td><%=ticket.flight_rate%></td>
                                    <td><%=ticket.flight_sac_code%></td>
                                    <td><%=customer.customer_name%></td>
                                    <td>₹<%=ticket.flight_quantity*ticket.flight_rate%></td>
                                    <%total_airtickets+=1;%>
                                    <%total_cost+=(ticket.flight_quantity*ticket.flight_rate);%>
                                </tr>
                            <%}%>
                        <% }); %>
                    <%});%>
                    <hr>
                    <tr>
                        <td><b>Total No. of Tickets</b></td>
                        <td><b><%=total_airtickets%></b></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><b>Total Cost</b></td>
                        <td><b>₹<%=total_cost%></b></td>
                    </tr>
                </tbody>
            </table>
        <br>
        <br>
      </div>
</body>

</html>