<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PreBill</title>
 

</head>
<body>
    <%-include("partials/header.ejs")%>
    <div class="container">

        <h1>Bill Number: <%=locals.bill_id%></h1>
        <h1>Biller Name: <%=locals.customer_name%></h1>
    </div>
    <br>
    <br>
    <div class="container">
        <form class="tab-view tab-view-height-auto" action="/bill_package" method="post">
            <br>
            <br>
            <h3>Packages List</h3>
                  <table class="table">
                      <thead>
                          <tr>
                            <th scope="col">Checkbox</th>
                            <th scope="col">Package Id</th>
                            <th scope="col">Package Description 1</th>
                            <th scope="col">Package Description 2</th>
                            <th scope="col">Package Description 3</th>
                            <th scope="col">Package Description 4</th>
                            <th scope="col">Package Description 5</th>
                            <th scope="col">Package Description 6</th>
                            <th scope="col">Package Quantity</th>
                            <th scope="col">Package Rate</th>
                            <th scope="col">Package SAC Code</th>
                            <th scope="col">Package Biller Id</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% package_info.forEach(function(ticket) { %>
                              <tr>
                                <th scope="row"><input type="checkbox" id="<%=ticket.package_id%>" name="packages" value="<%=ticket.package_id%>"  />
                                </th>
                                  <td><%=ticket.package_id%></td>
                                  <td><%=ticket.package_desc_1%></td>
                                  <td><%=ticket.package_desc_2%></td>
                                  <td><%=ticket.package_desc_3%></td>
                                  <td><%=ticket.package_desc_4%></td>
                                  <td><%=ticket.package_desc_5%></td>
                                  <td><%=ticket.package_desc_6%></td>
                                  <td><%=ticket.package_quantity%></td>
                                  <td><%=ticket.package_rate%></td>
                                  <td><%=ticket.package_sac_code%></td>
                                  <td><%=ticket.package_biller_id%></td>
                              </tr>
                          <%});%>
                      </tbody>
                  </table>
              <br>
              <br>
            <br>
            <div class="col-md-4">
                <label for="inputEmail4" class="form-label">SAC CODE</label>
                <input type="number" class="form-control border border-success" id="inputEmail4" value="00440063" name="sac_code_original">
            </div>
            <br>
            <input type="submit" name="add" value="Submit" id="tab">
        </form>
        <br>
        <br>

    </div> 
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</html>