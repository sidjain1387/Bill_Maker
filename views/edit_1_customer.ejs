<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrePreBill</title>
 

</head>
<body>
  <%-include("partials/header.ejs")%>
  <div class="container">    
    <form class="row g-3" method="post" action="/edit_selected_customer">
        <div class="col-md-4">
          <label for="inputEmail4" class="form-label">Biller id</label>
          <input type="number" class="form-control border border-success" id="inputEmail4" name="customer_id">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">EDIT</button>
        </div>
      </form>
      
      <br>
      <br>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Customer Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Customer Address</th>
            <th scope="col">Customer GSTIN</th>
            <th scope="col">Customer State</th>
          </tr>
        </thead>
        <tbody>
          <% customer.forEach((customer)=>{%>
            <tr>
              <th scope="row"><%=customer.customer_id%></th>
              <td><%=customer.customer_name%></td>
              <td><%=customer.customer_address%></td>
              <td><%=customer.customer_gstin%></td>
              <td><%=customer.customer_state%></td>
            </tr>
            <%});%>
          </tbody>
        </table>
        <br>
        <br>
      </div>
</body>

</html>